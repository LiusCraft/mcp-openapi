{
    "version": "1.0.0",
    "info": {
        "title": "MCP OpenAPI Store",
        "description": "Example API definitions for MCP tools",
        "version": "1.0.0"
    },
    "apis": [
        {
            "id": "example-weather-api",
            "name": "get_weather",
            "description": "Get current weather information for a specified city. Returns temperature, humidity, and weather conditions.",
            "base_url": "https://api.openweathermap.org",
            "path": "/data/2.5/weather",
            "method": "GET",
            "parameters": [
                {
                    "name": "q",
                    "description": "City name (e.g., 'London', 'Beijing')",
                    "in": "query",
                    "required": true,
                    "type": "string"
                },
                {
                    "name": "units",
                    "description": "Temperature units: 'metric' for Celsius, 'imperial' for Fahrenheit",
                    "in": "query",
                    "required": false,
                    "type": "string",
                    "default": "metric",
                    "enum": ["metric", "imperial", "kelvin"]
                }
            ],
            "responses": [],
            "authentication": {
                "type": "api_key",
                "header_name": "appid",
                "api_key": "YOUR_API_KEY"
            },
            "headers": {},
            "status": "enabled",
            "tags": ["weather", "external"],
            "created_at": "2024-01-01T00:00:00Z",
            "updated_at": "2024-01-01T00:00:00Z"
        },
        {
            "id": "example-user-api",
            "name": "get_user",
            "description": "Get user information by user ID from the internal user service.",
            "base_url": "https://api.example.com",
            "path": "/users/{id}",
            "method": "GET",
            "parameters": [
                {
                    "name": "id",
                    "description": "User ID",
                    "in": "path",
                    "required": true,
                    "type": "string"
                }
            ],
            "responses": [],
            "authentication": {
                "type": "bearer",
                "token": "YOUR_BEARER_TOKEN"
            },
            "headers": {
                "Accept": "application/json"
            },
            "status": "enabled",
            "tags": ["user", "internal"],
            "created_at": "2024-01-01T00:00:00Z",
            "updated_at": "2024-01-01T00:00:00Z"
        },
        {
            "id": "example-create-post",
            "name": "create_post",
            "description": "Create a new blog post with title, content, and optional tags.",
            "base_url": "https://api.example.com",
            "path": "/posts",
            "method": "POST",
            "parameters": [],
            "request_body": {
                "content_type": "application/json",
                "schema": {
                    "content": {
                        "description": "Post content in markdown",
                        "type": "string"
                    },
                    "tags": {
                        "description": "List of tags",
                        "type": "array"
                    },
                    "title": {
                        "description": "Post title",
                        "type": "string"
                    }
                },
                "required": true,
                "description": "Post data including title, content, and tags"
            },
            "responses": [],
            "authentication": {
                "type": "bearer",
                "token": "YOUR_BEARER_TOKEN"
            },
            "headers": {
                "Content-Type": "application/json"
            },
            "status": "disabled",
            "tags": ["blog", "internal"],
            "created_at": "2024-01-01T00:00:00Z",
            "updated_at": "2024-01-01T00:00:00Z"
        }
    ]
}
